<h2>{{class.title}}</h2>
<p>
    <strong>
        Instructor:
    </strong>
    {{class.instructor}}
</p>
<p>
    {{class.description}}
</p>

<ul class="alt">
    {{#each class.lessons}}
        <li>{{lesson_title}}</li>
    {{/each}}
</ul>

{{#if user}}
   <form  id="classRegForm" method="Post" action="/students/classes/register">
      <input type="hidden" name="student_id" value="{{user._id}}">
      <input type="hidden" name="class_id" value="{{class._id}}">
      <input type="hidden" name="class_title" value="{{class.title}}">
      <input type="submit" name="button" value="Register for this class">
   </form>


{{else}}
   <p>You must be log in to view our content</p>
{{/if}}